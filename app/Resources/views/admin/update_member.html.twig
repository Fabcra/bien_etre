{% extends 'admin/admin.html.twig' %}
{% block rightside %}
<div class="page-title">
    <h1>Modification profil</h1>
</div><!-- /.page-title -->
{{ form_start(adminMemberForm, {attr:{novalidate:'novalidate'}}) }}
<div class="background-white p20 mb30">
    <h3 class="page-title">
        Contact Information

        <button type="submit" class="btn btn-primary btn-xs pull-right">Confirmation</button>
    </h3>

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.firstName, {'label' : 'Prénom',
                'attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.lastName, {'label' : 'Nom','attr':{'class':'form-control'}}) }}
        </div>

        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.eMail, {'label' : 'E-mail','attr':{'class':'form-control'}}) }}
        </div>


        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.newsletter, {'label' : 'S\'abonner à la newsletter'}) }}
        </div>


    </div>

</div>

<div class="background-white p20 mb30">
    <h3 class="page-title">
        Address

    </h3>

    <div class="row">
        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.streetName, {'label' : 'Rue','attr':{'class':'form-control'}}) }}
        </div><!-- /.form-group -->
        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.addressNo, {'label' : 'Numéro','attr':{'class':'form-control'}}) }}
        </div><!-- /.form-group -->
        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.postalCode, {'label' : 'Code Postal','attr':{'class':'form-control'}}) }}
        </div><!-- /.form-group -->


        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.locality, {'label' : 'Localité','attr':{'class':'form-control'}}) }}
        </div><!-- /.form-group -->
        <div class="form-group col-sm-6">
            {{ form_row(adminMemberForm.city, {'label' : 'Ville','attr':{'class':'form-control'}}) }}
        </div><!-- /.form-group -->


    </div><!-- /.row -->
</div>


{{ form_end(adminMemberForm) }}
{% endblock %}


