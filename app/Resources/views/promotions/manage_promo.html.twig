{# liste pour la gestion des promotions #}
{% extends 'default/layout_update.html.twig' %}
 {% block leftside %}
     {% include 'default/nav_update.html.twig' %}
 {% endblock %}

{% block rightside %}

    <a href="{{ path('promo_new') }}" class="btn btn-xs btn-primary pull-right">Nouveau</a>
    <h3>Liste de vos promotions</h3>

 {% include 'promotions/list.html.twig' %}
{% endblock %}
{% block javascripts %}

    {{ parent() }}

    <script>
        jQuery(document).ready(function () {
            $('.js-remove-promo').on('click', function(e){
                e.preventDefault();

                var $el=$(this).closest('.js-promo-item');

                $(this).find('.fa-close')
                    .removeClass('fa-close')

                $.ajax({
                    url:$(this).data('url'),
                    method: 'DELETE'
                }).done(function () {
                    $el.fadeOut();
                })
            });

        });
    </script>
{% endblock %}
