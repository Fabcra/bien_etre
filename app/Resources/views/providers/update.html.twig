{# découpe formulaire modification profil #}
{% extends 'default/layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-lg-3">
                <div class="sidebar">
                    <div class="widget">
                        <div class="user-photo">
                            <a href="{{path("new_image",{'slug':app.user.slug})}}">
                                <img src="{{app.user.logo.url}}" alt="User Photo">
                                <span class="user-photo-action">Click here to reupload</span>
                            </a>
                        </div><!-- /.user-photo -->
                    </div><!-- /.widget -->


                    <div class="widget">

                        <ul class="menu-advanced">
                            <li><a href="#"><i class="fa fa-user"></i> Edit Profile</a></li>
                            <li><a href="#"><i class="fa fa-key"></i> Password</a></li>
                            <li><a href="#"><i class="fa fa-sign-out"></i> Logout</a></li>
                        </ul>
                    </div><!-- /.widget -->

                </div><!-- /.sidebar -->
            </div><!-- /.col-* -->

            <div class="col-sm-8 col-lg-9">
                <div class="content">
                    <div class="page-title">
                        <h1>Modification profil</h1>
                    </div><!-- /.page-title -->
                    {{ form_start(providerForm, {attr:{novalidate:'novalidate'}}) }}
                    <div class="background-white p20 mb30">
                        <h3 class="page-title">
                            Contact Information

                            <button type="submit" class="btn btn-primary btn-xs pull-right">Confirmation</button>
                        </h3>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.name, {'label' : 'Nom',
                                    'attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.services, {'label' : 'Catégories de services','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.tvaNo, {'label' : 'N° de TVA','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.phoneNo, {'label' : 'N° de Téléphone','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.eMail_contact, {'label' : 'E-mail','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.website, {'label' : 'Website','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->


                        </div><!-- /.row -->

                    </div>

                    <div class="background-white p20 mb30">
                        <h3 class="page-title">
                            Address

                        </h3>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.streetName, {'label' : 'Rue','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.addressNo, {'label' : 'Numéro','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.postalCode, {'label' : 'Code Postal','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.locality, {'label' : 'Localité','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(providerForm.city, {'label' : 'Ville','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->


                        </div><!-- /.row -->
                    </div>


                    {{ form_end(providerForm    ) }}
                </div><!-- /.content -->
            </div><!-- /.col-* -->
        </div><!-- /.row -->
    </div><!-- /.container -->
{% endblock %}