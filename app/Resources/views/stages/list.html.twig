{# LISTE DES STAGES A INCLURE DANS UN TWIG #}
<div class="pricings">
    {% if stages is empty %}
        <div> IL N'Y A PAS DE STAGE EN COURS</div>
    {% else %}

        {% for s in stages %}
            <div class="col-sm-3">
                <div class="pricing js-stage-item">
                    <div class="pricing-title">{{ s.name }}</div><!-- /.pricing-title -->
                    <div class="pricing-subtitle">{{ s.description|slice(0,20) }}</div><!-- /.pricing-subtitle -->
                    <div class="pricing-price"><span class="pricing-currency">â‚¬</span>{{ s.price }} <span
                                class="pricing-period">/ jour</span></div><!-- /.pricing-price -->
                    <a href="{{ path('show_stage',{'slug':s.slug}) }}" class="btn-primary">Voir</a>

                    <hr>
                    <ul class="pricing-list">
                        <li><span>du</span><strong>{{ s.fromDate|date('d-m-Y') }}</strong></li>
                        <li><span>au</span><strong>{{ s.toDate|date('d-m-Y') }}</strong></li>
                    </ul><!-- /.pricing-list -->
                    <hr>
                    {% if app.user %}
                        {% if app.user.usertype == 'provider' %}
                            {% if s.provider.name == app.user.name %}
                                <a href="{{ path('stages_update', {'id':s.id}) }}" class="pricing-action">Modifier</a>
                                <br>
                                <a href="#"
                                   class="text-danger js-remove-stage"
                                   data-url="{{ path('stage_delete',{
                                       id: s.id,
                                   }) }}"
                                >
                                    <span class="fa fa-close">supprimer</span>
                                </a>
                            {% endif %}
                        {% endif %}
                    {% endif %}
                </div><!-- /.pricing -->
                <br/>
            </div><!-- /.col-* -->
        {% endfor %}
    {% endif %}
</div><!-- /.pricings -->
