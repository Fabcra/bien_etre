{# navigation secondaire de l'update utilisateurs #}
<div class="col-sm-4 col-lg-3">
    <div class="sidebar">
        <div class="widget">
            <div class="user-photo">
                <a href="{{ path("image_new") }}">
                    {% if (app.user.usertype=='provider') %}
                        <img src="{{ app.user.logo.url }}" alt="User Photo">
                    {% elseif (app.user.usertype=='member') %}
                        <img src="{{ app.user.avatar.url }}" alt="User Photo">
                    {% endif %}
                    <span class="user-photo-action">Click here to reupload</span>
                </a>
            </div><!-- /.user-photo -->
        </div><!-- /.widget -->


        <div class="widget">
            <ul class="menu-advanced">
                <li><a href="{{ path('update_profile') }}"><i class="fa fa-user"></i> Modification profil</a></li>
                {% if (app.user.usertype=='provider') %} {# pas de galerie d'images pour le simple utilisateur #}
                    <li><a href="{{ path('gallery_image_new') }}"><i class="fa fa-image"></i> Gestion de la galerie</a></li>
                    <li><a href="{{ path('services_new') }}"><i class="fa fa-asterisk"></i>Nouveau service</a></li>
                    <li><a href="{{ path('stages_gestion') }}"><i class="fa fa-beer"></i>Gestions des stages</a></li>
                    <li><a href="{{ path('promos_gestion') }}"><i class="fa fa-money"></i>Gestions des promotions</a></li>
                {% endif %}
                <li><a href="{{ path('update_password') }}"><i class="fa fa-key"></i> Mot de passe</a></li>
                <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out"></i> Logout</a></li>
            </ul>
        </div><!-- /.widget -->
    </div>
</div>