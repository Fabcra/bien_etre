{% extends 'default/layout_admin.html.twig' %}
 {% block leftside %}
     {% include 'default/nav_update.html.twig' %}
 {% endblock %}
{% block rightside %}
    <div class="page-title">
        <h1>Change Password</h1>
    </div><!-- /.page-title -->

    {{ form_start(pwdForm, {attr:{novalidate:'novalidate'}}) }}
    <div class="form-group">
        {{ form_row(pwdForm.oldPassword,{'label':'Mot de passe actuel','attr':{'class':'form-control'}}) }}
        {{ form_row(pwdForm.password.first,
        {
            'label':'Nouveau mot de passe',
            'attr':{'class':'form-control'}
        }
        ) }}
    </div><!-- /.form-group -->

    <div class="form-group">
        {{ form_row(pwdForm.password.second,
        {
            'label':'Retaper le nouveau mot de passe',
            'attr':{'class':'form-control'}
        }
        ) }}
    </div><!-- /.form-group -->

    <button type="submit" class="btn btn-primary pull-right">Change</button>
    {{ form_end(pwdForm) }}
{% endblock %}
