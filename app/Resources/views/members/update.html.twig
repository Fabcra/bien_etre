{# découpe formulaire modification profil #}
{% extends 'default/layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-lg-3">
                <div class="sidebar">
                    <div class="widget">
                        <div class="user-photo">
                            <a href="{{ path("new_image",{'slug':app.user.slug}) }}">
                                <img src="{{ app.user.avatar.url }}" alt="User Photo">
                                <span class="user-photo-action">Click here to reupload</span>
                            </a>
                        </div><!-- /.user-photo -->
                    </div><!-- /.widget -->


                    <div class="widget">

                        <ul class="menu-advanced">
                            <li><a href="#"><i class="fa fa-user"></i> Edit Profile</a></li>
                            <li><a href="#"><i class="fa fa-key"></i> Password</a></li>
                            <li><a href="#"><i class="fa fa-sign-out"></i> Logout</a></li>
                        </ul>
                    </div><!-- /.widget -->

                </div><!-- /.sidebar -->
            </div><!-- /.col-* -->

            <div class="col-sm-8 col-lg-9">
                <div class="content">
                    <div class="page-title">
                        <h1>Modification profil</h1>
                    </div><!-- /.page-title -->
                    {{ form_start(memberForm, {attr:{novalidate:'novalidate'}}) }}
                    <div class="background-white p20 mb30">
                        <h3 class="page-title">
                            Contact Information

                            <button type="submit" class="btn btn-primary btn-xs pull-right">Confirmation</button>
                        </h3>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.firstName, {'label' : 'Prénom',
                                    'attr':{'class':'form-control'}}) }}
                            </div>

                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.lastName, {'label' : 'Nom','attr':{'class':'form-control'}}) }}
                            </div>

                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.eMail, {'label' : 'E-mail','attr':{'class':'form-control'}}) }}
                            </div>


                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.newsletter, {'label' : 'S\'abonner à la newsletter'}) }}
                            </div>


                        </div>
                        <-- /.row -->

                    </div>

                    <div class="background-white p20 mb30">
                        <h3 class="page-title">
                            Address

                        </h3>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.streetName, {'label' : 'Rue','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.addressNo, {'label' : 'Numéro','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.postalCode, {'label' : 'Code Postal','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->


                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.locality, {'label' : 'Localité','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->
                            <div class="form-group col-sm-6">
                                {{ form_row(memberForm.city, {'label' : 'Ville','attr':{'class':'form-control'}}) }}
                            </div><!-- /.form-group -->


                        </div><!-- /.row -->
                    </div>


                    {{ form_end(memberForm) }}
                </div><!-- /.content -->
            </div><!-- /.col-* -->
        </div><!-- /.row -->
    </div><!-- /.container -->
{% endblock %}